<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ticket_bg"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="3dp"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:stretchColumns="1"
        >
        <!--订单号-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_margin="@dimen/table_layout_margin"
                android:background="@color/tablelayout_detail_bg"
                android:gravity="end"
                android:padding="@dimen/table_layout_padding"
                android:text="订单号："
                />

            <TextView
                android:id="@+id/ticket_id_ticket_item"
                android:layout_margin="@dimen/table_layout_margin"
                android:background="@color/tablelayout_detail_bg"
                android:padding="@dimen/table_layout_padding"
                tools:text="120342030423"
                />
        </TableRow>
        <!--身份证号码-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="@dimen/table_layout_margin"
                android:background="@color/tablelayout_detail_bg"
                android:gravity="end"
                android:padding="@dimen/table_layout_padding"
                android:text="身份证："
                />

            <TextView
                android:id="@+id/id_card_ticket_item"
                android:layout_margin="@dimen/table_layout_margin"
                android:background="@color/tablelayout_detail_bg"
                android:padding="@dimen/table_layout_padding"
                tools:text="123412342341234"
                />
        </TableRow>
        <!--起点-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="@dimen/table_layout_margin"
                android:background="@color/tablelayout_detail_bg"
                android:gravity="end"
                android:padding="@dimen/table_layout_padding"
                android:text="起点："

                />

            <TextView
                android:id="@+id/source_text_view_ticket_item"
                android:layout_margin="@dimen/table_layout_margin"
                android:background="@color/tablelayout_detail_bg"
                android:padding="@dimen/table_layout_padding"
                tools:text="广州"
                />
        </TableRow>
        <!--终点-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="@dimen/table_layout_margin"
                android:background="@color/tablelayout_detail_bg"
                android:gravity="end"
                android:padding="@dimen/table_layout_padding"
                android:text="终点："
                />

            <TextView
                android:id="@+id/destination_text_view_ticket_item"
                android:layout_margin="@dimen/table_layout_margin"
                android:background="@color/tablelayout_detail_bg"
                android:padding="@dimen/table_layout_padding"
                tools:text="佛冈"
                />
        </TableRow>


    </TableLayout>
</LinearLayout>