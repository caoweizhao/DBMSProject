<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/identity_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="G411"
            />

        <TextView
            android:id="@+id/source_text_view_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:drawableStart="@drawable/ic_source"
            tools:text="北京"
            />

        <TextView
            android:id="@+id/start_time_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/date_detail_page_margin"
            android:layout_marginRight="@dimen/date_detail_page_margin"
            android:layout_weight="1"
            android:drawableBottom="@drawable/ic_refer"
            android:drawablePadding="2dp"
            android:gravity="center"
            tools:text="17:35"
            />

        <TextView
            android:id="@+id/destination_text_view_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            tools:text="上海"
            android:drawableStart="@drawable/ic_destination"
            />

        <TextView
            android:id="@+id/remain_count_text_view_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_rest"
            android:drawablePadding="3dp"
            android:gravity="center"
            tools:text="20"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>